<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MovieDetail">
    <android.support.v7.widget.CardView
        android:id="@+id/cardviewDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.031">

        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivMovieImageDet"
                android:background="@android:color/background_dark"
                android:layout_width="90dp"
                android:layout_height="90dp" />


            <TextView
                android:id="@+id/TvMovieTitleDet"
                android:paddingLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/ivMovieImageDet"
                android:text="Movie Title"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TvMovieReleaseDet"
                android:padding="5dp"
                android:layout_toRightOf="@id/ivMovieImageDet"
                android:text="Released:"
                android:layout_below="@id/TvMovieTitleDet"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tvMovieCatDet"
                android:paddingLeft="5dp"
                android:text="Category"
                android:layout_below="@id/TvMovieReleaseDet"
                android:layout_toRightOf="@id/ivMovieImageDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRuntimeDet"
                android:layout_below="@+id/tvMovieCatDet"
                android:layout_toRightOf="@+id/ivMovieImageDet"
                android:padding="5dp"
                android:text="Runtime"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDirectedByDet"
                android:layout_below="@+id/ivMovieImageDet"
                android:layout_marginTop="10dp"
                android:text="Directed By:"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardviewDet"
        app:layout_constraintVertical_bias="0.059">

        <TextView
            android:id="@+id/tvActorsDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actors:"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWritersDet"
            android:text="Writers:"
            android:layout_below="@id/tvActorsDet"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPlotDet"
            android:layout_below="@+id/tvWritersDet"
            android:text="plot:"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRatingDet"
            android:layout_below="@+id/tvPlotDet"
            android:text="Rating:"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvBoxOfficeDet"
            android:layout_below="@+id/tvRatingDet"
            android:padding="5dp"
            android:text="Box Office:"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>